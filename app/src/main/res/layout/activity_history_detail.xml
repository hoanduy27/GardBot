<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/history_inside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_border"
        android:text="Time" />
    <TextView
        android:id="@+id/pumpInf"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TableRow>
            <TextView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Bắt đầu" />

            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_weight="2"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Kết thúc" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Thời gian" />

            <TextView
                android:id = "@+id/time_start"
                android:background="@color/white"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_weight="2"
                android:text="12:00" />

            <TextView
                android:id = "@+id/time_end"
                android:background="@color/white"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="20sp"
                android:text="x" />
        </TableRow>

        <TableRow>
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Độ ẩm không khí" />

            <TextView
                android:id = "@+id/air_moisture_begin"
                android:background="@color/white"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="20sp"
                android:text="x" />

            <TextView
                android:id = "@+id/air_moisture_end"
                android:background="@color/white"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="20sp"
                android:text="x" />
        </TableRow>
        <TableRow>
            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Nhiệt độ" />

            <TextView
                android:id = "@+id/temp_begin"
                android:background="@color/white"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="20sp"
                android:text="x" />

            <TextView
                android:id = "@+id/temp_end"
                android:background="@color/white"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="20sp"
                android:text="x" />
        </TableRow>

        <TableRow>

            <TextView
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Độ ẩm đất" />

            <TextView
                android:id = "@+id/soil_moisture_begin"
                android:background="@color/white"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="20sp"
                android:text="x" />

            <TextView
                android:id = "@+id/soil_moisture_end"
                android:background="@color/white"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="20sp"
                android:text="x" />
        </TableRow>
    </TableLayout>
</LinearLayout>