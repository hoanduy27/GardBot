<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewInfomation.ViewInfomationActivity">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView3"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pump"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineViewInfo1"
        app:layout_constraintTop_toTopOf="@+id/guidelineViewInfo2"
        app:riv_corner_radius="18dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView2"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/temperatures"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineViewInfo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineViewInfo2"
        app:riv_corner_radius="18dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/humidity"
        app:layout_constraintBottom_toTopOf="@+id/guidelineViewInfo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineViewInfo1"
        app:layout_constraintTop_toBottomOf="@+id/guidelineViewInfo"
        app:riv_corner_radius="18dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView4"
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/soil_moisture"
        app:layout_constraintBottom_toTopOf="@+id/guidelineViewInfo2"
        app:layout_constraintEnd_toStartOf="@+id/guidelineViewInfo1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineViewInfo"
        app:riv_corner_radius="18dp" />

    <ImageView
        android:id="@+id/imgSoilMoisture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_moisture"
        android:background="@drawable/rounded_border_green"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageView4"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView4"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView4"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView4" />

    <ImageView
        android:id="@+id/textView_Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:src="@drawable/ic_humidity"
        android:background="@drawable/rounded_border_green"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageView"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView"
 />

    <TextView
        android:id="@+id/textView_CurrentHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textColor="@color/white"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageView"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView"
        app:layout_constraintTop_toBottomOf="@+id/textView_Humidity" />

    <ImageView
        android:id="@+id/textView_Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_temperature"
        android:background="@drawable/rounded_border_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageView2"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView2"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView2"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView2" />

    <TextView
        android:id="@+id/textView_CurrentTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25Â°C"
        android:textColor="@color/white"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageView2"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView2"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView_Temperature" />

    <ImageView
        android:id="@+id/textView_Pump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pump"
        android:background="@drawable/rounded_border_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageView3"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView3"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView3"
        app:layout_constraintTop_toTopOf="@+id/roundedImageView3" />

    <TextView
        android:id="@+id/textView_CurrentActivePump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/5"
        android:textColor="@color/white"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/roundedImageView3"
        app:layout_constraintEnd_toEndOf="@+id/roundedImageView3"
        app:layout_constraintStart_toStartOf="@+id/roundedImageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView_Pump" />

    <TextView
        android:id="@+id/textViewDetail_Soil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/viewDetail"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guidelineViewInfo2"
        app:layout_constraintEnd_toStartOf="@+id/guidelineViewInfo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView4" />

    <TextView
        android:id="@+id/textViewDetail_Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/viewDetail"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guidelineViewInfo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineViewInfo1"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView" />

    <TextView
        android:id="@+id/textViewDetail_Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/viewDetail"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineViewInfo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_CurrentTemperature" />

    <TextView
        android:id="@+id/textViewDetail_Pump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/viewDetail"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineViewInfo1"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView3" />

    <TextView
        android:id="@+id/textViewTitleViewInfo"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:text="@string/viewInfo"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineViewInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_banner"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineViewInfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineViewInfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>